<?xml version='1.0' encoding='utf-8'?>
<widget id="org.ppitiongkok" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PPI Tiongkok</name>
    <description>
        Aplikasi Perhimpunan Pelajar Indonesia Tiongkok
    </description>
    <author email="ppitiongkok.it@gmail.com" href="http://ppitiongkok.org">
        Departemen IT PPI Tiongkok
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="FadeSplashScreen" value="true" />
        <preference name="FadeSplashScreenDuration" value="3" />
        <preference name="SplashScreenDelay" value="3000" />
        <preference name="ShowSplashScreenSpinner" value="false" />
        <preference name="SplashShowOnlyFirstTime" value="true" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon density="ldpi" height="36" platform="android" src="package-assets/icon/icon_ldpi_36x36.png" width="36" />
    <icon density="mdpi" height="48" platform="android" src="package-assets/icon/icon_mdpi_48x48.png" width="48" />
    <icon density="hdpi" height="72" platform="android" src="package-assets/icon/icon_hdpi_72x72.png" width="72" />
    <icon density="xhdpi" height="96" platform="android" src="package-assets/icon/icon_xhdpi_96x96.png" width="96" />
    <engine name="android" spec="^7.0.0" />
    <engine name="browser" spec="^5.0.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
</widget>
